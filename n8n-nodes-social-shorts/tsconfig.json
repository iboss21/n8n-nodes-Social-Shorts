{
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "target": "es2019",
    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts"
  ]
}